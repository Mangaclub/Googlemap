<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_gmap/models/rules"
	addfieldpath="/administrator/components/com_gmap/models/fields"
>
	<fieldset name="details">
		<field
			class="inputbox validate-textbox"
			default=""
			label="COM_GMAP_VIEW_GM_LINE_STYLE_LABEL_TITLE"
			name="title"
			required="true"
			size="40"
			type="text"
			validate="textbox"
		/>
		<field
			default=""
			label="COM_GMAP_VIEW_GM_LINE_STYLE_LABEL_SVG"
			name="path"
			onchange="lineStyle.drawLineSymbol()"
			required="true"
			rows="10" cols="5"
			type="textarea"
			validate="textbox"
		/>
		<field
			class="inputbox"
			default=""
			onchange="lineStyle.anchor_x(this.value)"
			label="COM_GMAP_VIEW_GM_LINE_STYLE_LABEL_ANCHOR_X"
			name="anchor_x"
			size="3"
			type="text"
		/>
		<field
			class="inputbox"
			default=""
			onchange="lineStyle.anchor_y(this.value)"
			label="COM_GMAP_VIEW_GM_LINE_STYLE_LABEL_ANCHOR_Y"
			name="anchor_y"
			size="3"
			type="text"
		/>
		<field
			label="COM_GMAP_VIEW_GM_LINE_STYLE_LABEL_FILL_COLOR"
			name="fillColor"
			default='#000000'
			type="color"
		/>
		<field
			label="COM_GMAP_VIEW_GM_LINE_STYLE_LABEL_STROKE_COLOR"
			name="strokeColor"
			onchange="lineStyle.strokeColor(this.value)"
			default='#000000'
			type="color"
		/>
		<field
			name="parameter"
			type="hidden"
			/>
		<field
			name="rotation"
			type="slider"
			table="gm_line_style"
			min="0"
			max="360"
			value="0"
			onchange="lineStyle.rotation"
			orientation="horizontal"
			style="width:300px;margin:15px;"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_ROTATION"
			description="">
		</field>
		<field
			name="scale"
			type="slider"
			table="gm_line_style"
			min="1"
			max="10"
			value="1"
			onchange="lineStyle.scale"
			orientation="horizontal"
			style="width:150px;margin:15px;"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_SCALE"
			description="">
		</field>
		<field
			name="strokeOpacity"
			type="slider"
			table="gm_line_style"
			min="0"
			max="10"
			value="0"
			onchange="lineStyle.strokeOpacity"
			orientation="horizontal"
			style="width:150px;margin:15px;"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_STROKE_OPACITY"
			description="">
		</field>
		<field
			name="strokeWeight"
			type="slider"
			table="gm_line_style"
			min="1"
			max="10"
			value="1"
			onchange="lineStyle.strokeWeight"
			orientation="horizontal"
			style="width:150px;margin:15px;"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_STROKE_WEIGHT"
			description="">
		</field>
		<field
			name="fillOpacity"
			type="slider"
			table="gm_line_style"
			min="0"
			max="10"
			value="0"
			onchange="lineStyle.fillOpacity"
			orientation="horizontal"
			style="width:150px;margin:15px;"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_FILL_OPACITY"
			description="">
		</field>
		<field
			name="svg_zoom"
			type="slider"
			min="1"
			max="20"
			value="1"
			onchange="lineStyle.svg_zoom"
			orientation="horizontal"
			style="width:150px;margin:15px;"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_SVG_ZOOM"
			description="">
		</field>
		<field 
				name="opt_line_visible"
				class="btn-group btn-group-yesno"
				type="radio"
				default="true"
				label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_OPT_LINE_VISIBLE"
				description="">
				<option value="true" onclick= "line.setOptions({strokeOpacity:1});">JYES</option>
				<option value="false" onclick= "line.setOptions({strokeOpacity:0});">JNO</option>
		</field>
		<field 
			name="opt_line_zindex"
			class="btn-group btn-group-yesno"
			type="radio"
			default="false"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_OPT_LINE_ZINDEX"
			description="">
			<option value="true" onclick= "line.setOptions({zIndex:2});">COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_OPT_LINE_ZINDEX_LINE</option>
			<option value="false" onclick= "line.setOptions({zIndex:0});">COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_OPT_LINE_ZINDEX_SVG</option>
		</field>
		<field
			name="opt_line_svg_offset"
			class="inputbox"
			default="0"
			onchange="lineStyle.drawLineSymbol();"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_OPT_LINE_ICON_OFFSET"
			size="15"
			type="text"
		/>
		<field
			name="opt_line_svg_repeat"
			class="inputbox"
			default="10px"
			onchange="lineStyle.drawLineSymbol();"
			label="COM_GMAP_VIEW_GM_MAP_LINE_STYLE_LABEL_OPT_LINE_ICON_PEPEAT"
			size="15"
			type="text"
		/>
	
	</fieldset>
</form>